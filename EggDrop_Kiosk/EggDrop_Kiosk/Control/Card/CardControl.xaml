<UserControl x:Class="EggDrop_Kiosk.Control.Card.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EggDrop_Kiosk.Control.Card"
             mc:Ignorable="d" 
             xmlns:qrcode="clr-namespace:KQRCode;assembly=KQRCode"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#ffffff">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="카드 결제를 선택하셨습니다." FontSize="24" FontWeight="black"
                       Margin="0 0 0 10"
                       TextAlignment="Center"/>
            <TextBlock Text="카메라에 QR코드를 대어주세요." TextAlignment="Center"
                       FontSize="16" FontWeight="Regular" Margin="0 0 0 10"/>
            <qrcode:KQRWebCam x:Name="webcam" QrDecoded="webcam_QrDecoded"
                          Width="250" Height="250"/>
        </StackPanel>
        <TextBox x:Name="tbRecog"
                 Margin="12,12,12,12"
                 Text="인식된 QR코드 값"
                 Height="30"
                 VerticalAlignment="Bottom"
                 HorizontalContentAlignment="Stretch"
                 VerticalContentAlignment="Center">
        </TextBox>
    </Grid>
</UserControl>
